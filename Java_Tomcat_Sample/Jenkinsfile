pipeline {
    agent any 
    stages {
        stage('Build Application') {
            steps {
                bat 'mvn -f Java_Tomcat_Sample/pom.xml clean package'
            }
            post {
                success {
                    echo "Now Archiving the Artifacts..."
                    archiveArtifacts artifacts: '**/*.war'
                }
            }
        }
    }
}